const checkButton = document.getElementById("check-btn");
const palInput = document.getElementById("text-input");
const palResult = document.getElementById("result");


checkButton.addEventListener("click", function () {
  if (palInput.value === '') {
    alert("Please input a value");
  } else {
    const inputValue = palInput.value.toLowerCase().replace(/[\W_]/g, '');
    if (isPalindrome(inputValue)) {
      palResult.textContent = `${palInput.value} is a palindrome`;
    } else {
     palResult.textContent = `${palInput.value} is not a palindrome`;
    }
  }

});

function isPalindrome(str) {
  const reversedString = str.split('').reverse().join('');
  return str === reversedString;
}

